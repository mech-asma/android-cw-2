<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6DE1D358"
    tools:context=".userInfo">

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:text="مرحبا بك"
        android:layout_gravity="center_horizontal"
        android:textColor="#E81818"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_marginRight="45dp"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="بيانات المستخدم:"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#8C5F1C"
                android:text="Name:" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:textColor="#ADBF9C69"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="TextView"
                android:textSize="20sp" />

            />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Number:"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#8C5F1C"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ADBF9C69"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:layout_marginRight="20dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/call"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#ABF6C276"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Call" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#8C5F1C"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email:" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="#ADBF9C69"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/openGmail"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="#ABF6C276"
                android:text="Open Gmail" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#8C5F1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Address:" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="#ADBF9C69"
                android:text="TextView"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/maps"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#ABF6C276"
                android:layout_weight="1"
                android:text="Open Maps" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>